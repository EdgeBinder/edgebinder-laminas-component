{
    "name": "edgebinder/edgebinder-laminas-component",
    "description": "Laminas/Mezzio integration component for EdgeBinder - A lightweight, storage-agnostic relationship management library",
    "license": "Apache-2.0",
    "type": "library",
    "keywords": [
        "edgebinder",
        "laminas",
        "mezzio",
        "relationships",
        "graph",
        "vector-database",
        "weaviate",
        "dependency-injection",
        "service-manager"
    ],
    "authors": [
        {
            "name": "EdgeBinder Team",
            "email": "team@edgebinder.dev"
        }
    ],
    "homepage": "https://github.com/EdgeBinder/edgebinder-laminas-component",
    "support": {
        "issues": "https://github.com/EdgeBinder/edgebinder-laminas-component/issues",
        "source": "https://github.com/EdgeBinder/edgebinder-laminas-component"
    },
    "require": {
        "php": "^8.3",
        "edgebinder/edgebinder": "^0.2.0",
        "laminas/laminas-servicemanager": "^3.0 || ^4.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.39",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^11.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "EdgeBinder\\Component\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EdgeBinder\\Component\\Test\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "composer-normalize": "composer normalize --dry-run --diff",
        "composer-normalize-fix": "composer normalize",
        "cs-check": "php-cs-fixer fix --dry-run --diff --verbose",
        "cs-fix": "php-cs-fixer fix --verbose",
        "phpstan": "phpstan analyse src test --level=8",
        "security-audit": "composer audit",
        "test": "phpunit --no-coverage",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-clover=coverage.xml --coverage-html=coverage-html",
        "test-integration": "phpunit --no-coverage test/Integration",
        "test-unit": "phpunit --no-coverage test/Unit"
    }
}
